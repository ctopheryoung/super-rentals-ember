{{#if addNewAnnouncement}}
<h3>New Announcement</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="message">Message</label>
        {{input value=message id="message"}}
      </div>
      <button {{action 'saveAnnouncement'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'announcementFormShow'}}>Add New Announcement</button>
{{/if}}
